local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local flying = false
local speed = 100

flyButton.MouseButton1Click:Connect(function()
    flying = true
    humanoid.PlatformStand = true
    while flying do
        wait()
        humanoid.JumpPower = 50
        humanoid.WalkSpeed = speed
    end
end)

unflyButton.MouseButton1Click:Connect(function()
    flying = false
    humanoid.PlatformStand = false
    humanoid.JumpPower = 50
    humanoid.WalkSpeed = 16
end)

changeSpeedButton.MouseButton1Click:Connect(function()
    speed = speed + 10
    if speed > 200 then
        speed = 100
    end
    humanoid.WalkSpeed = speed
end)

seePlayerButton.MouseButton1Click:Connect(function()
    local players = game.Players:GetPlayers()
    for _, player in ipairs(players) do
        if player ~= game.Players.LocalPlayer then
            local character = player.Character or player.CharacterAdded:Wait()
            local humanoid = character:WaitForChild("Humanoid")
            local head = character:WaitForChild("Head")
            local cam = workspace.CurrentCamera
            cam.CameraSubject = humanoid
            cam.CameraType = Enum.CameraType.Attach
            cam.CFrame = CFrame.new(head.Position, head.Position + Vector3.new(0, 0, -10))
            wait(5)
            cam.CameraSubject = nil
        end
    end
end)

backToScreenButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    screenGui.Parent = nil
end)
